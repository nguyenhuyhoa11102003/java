<link rel="stylesheet" href="/css/product-detail.css">
<div class="container-fluid pt-3">
    <div class="row d-flex justify-content-center">
        {{#with product}}
            <div class="col-4">
                <img src="/uploads/{{image}}" style="width: 100%;height: 500px;" class="rounded">
            </div>

            <div class="col-7 product-info rounded">
                <h3>{{name}}</h3>
                <h5>{{formatPrice price}}</h5>
                <p class="text-secondary">{{description}}</p>
                <br>
                {{#if ../username}}
                    <button onclick="addProductToCart('{{id}}')" class="btn btn-dark px-4 mt-3"><i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng</button>
                {{else}}
                    <a href="/account/login" class="btn btn-dark px-4 mt-3"><i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng</a>
                {{/if}}
            </div>
            
            <div class="col-11 mt-3">
                <table class="table" style="background-color: white;">
                    <tr>
                        <th class="bg-dark text-light">Tên Sản Phẩm</th>
                        <td>{{name}}</td>
                    </tr>
                    <tr>
                        <th class="bg-dark text-light">Mô Tả</th>
                        <td>{{description}}</td>
                    </tr>
                    <tr>
                        <th class="bg-dark text-light">Danh Mục</th>
                        <td>{{catalog}}</td>
                    </tr>
                </table>
            </div>
        {{/with}}
    </div>
</div>

<script src="/js/product-detail.js"></script>
<script src="/js/main.js"></script>